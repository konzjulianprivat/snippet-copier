{
  "name": "snippet-copier",
  "displayName": "snippet-copier",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mySnippetCopier.copy",
        "title": "Copy Text"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "snippet-copier-container",
          "title": "Snippet Copier",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "snippet-copier-container": [
        {
          "id": "snippet-list",
          "name": "My Snippets"
        }
      ]
    },
    "configuration": {
      "title": "Snippet Copier",
      "properties": {
        "mySnippetCopier.snippets": {
          "type": "array",
          "default": ["Hello World", "git status", "Lorem Ipsum"],
          "description": "List of texts you want to copy."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
